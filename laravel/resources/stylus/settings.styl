$cinzaClaro = #f3f3f3;


lato($size, $weight = normal) {
    font-family: 'Lato', sans-serif;
    font-size: $size px;
    font-weight: 400;

    if ($weight == thin) {
        font-weight: 100;
    }

    if ($weight == light) {
        font-weight: 300;
    }
}

jakarta($size, $weight = normal) {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: $size px;
    font-weight: 400;

    if ($weight == thin) {
        font-weight: 100;
    }

    if ($weight == light) {
        font-weight: 300;
    }
}

